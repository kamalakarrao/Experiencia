<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearlayoutmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Groceries-->
        <!--Groceries-->
        <!--Groceries-->
        <!--Groceries-->
        <!--Groceries-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="#607D8B"
            android:gravity="center"

            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Status : Disconnected"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Location"
                android:textColor="#FFFFFF"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rain_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#90A4AE"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rain_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="25dp"
                    android:src="@drawable/rainoff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="3"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="Rain"
                        android:textColor="#ffffff"
                        android:textSize="34sp" />

                    <Switch
                        android:id="@+id/rain_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <!--Groceries-->
        <!--Groceries-->
        <!--Groceries-->
        <!--Groceries-->
        <!--Groceries-->


        <!--Medicines-->
        <!--Medicines-->
        <!--Medicines-->
        <!--Medicines-->
        <!--Medicines-->


        <LinearLayout
            android:id="@+id/cloud_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#90A4AE"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cloud_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:src="@drawable/cloudoff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="3"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="Clouds"
                        android:textColor="#ffffff"


                        android:textSize="34sp" />

                    <Switch
                        android:id="@+id/cloud_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <!--Medicines-->
        <!--Medicines-->
        <!--Medicines-->
        <!--Medicines-->
        <!--Medicines-->

        <!--Mall shopping-->
        <!--Mall shopping-->
        <!--Mall shopping-->
        <!--Mall shopping-->
        <!--Mall shopping-->


        <LinearLayout
            android:id="@+id/sunshine_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#90A4AE"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sunshine_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:src="@drawable/sunshineoff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="3"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="Sunshine"
                        android:textColor="#ffffff"
                        android:textSize="34sp" />


                    <Switch
                        android:id="@+id/sunshine_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <!--Mall shopping-->
        <!--Mall shopping-->
        <!--Mall shopping-->
